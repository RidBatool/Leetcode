class Solution(object):
    def largestGoodInteger(self, num):
        """
        :type num: str
        :rtype: str
        """
        max_good = ""  # store the maximum good integer found
        
        # Check every substring of length 3
        for i in range(len(num) - 2):
            substring = num[i:i+3]
            if substring[0] == substring[1] == substring[2]:  # all same digit
                if substring > max_good:  # compare lexicographically (works for digits)
                    max_good = substring
        
        return max_good
